{% form_theme form 'form/fields.html.twig' %}

{{ form_start(form, {'attr': {'class': 'well form-horizontal', 'novalidate': 'novalidate'}}) }}
    <div class="form-row">
        <div class="col-lg-12">
            {{ form_errors(form.firstname) }}
            {{ form_errors(form.lastname) }}
        </div>
        <div class="col-sm-4 offset-sm-2 form-group">
            {{ form_label(form.firstname, null, {
                'label': 'Pr√©nom',
                'label_attr': {'class': 'control-label'}
            }) }}
            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-sm-4 form-group">
            {{ form_label(form.lastname, null, {
                'label': 'Nom',
                'label_attr': {'class': 'control-label'}
            }) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-4 offset-sm-4 form-group">
            {{ form_label(form.avatar, null, {
                'label': 'Avatar',
                'label_attr': {'class': 'control-label'}
            }) }}
            {{ form_widget(form.avatar) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-12 form-group">
            <a class="blue-link" href="{{ path('user_reset_password') }}">Changer de mot de passe</a>
        </div>
        <div class="col-lg-12 form-group">
            <button class="btn btn-info" type="submit">Enregistrer <i class="fa fa-paper-plane"></i></button>
        </div>
    </div>
{{ form_end(form) }}
