{% form_theme form 'form/fields.html.twig' %}

{{ form_start(form, {'attr': {'class': 'well form-horizontal', 'novalidate': 'novalidate'}}) }}
    <div class="form-row">
        <div class="col-sm-4 offset-sm-4 form-group">
            {{ form_errors(form.currentPassword) }}
            {{ form_label(form.currentPassword, null, {
                'label': 'Mot de passe actuel',
                'label_attr': {'class': 'control-label'}
            }) }}
            {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-4 offset-sm-4 form-group">
            {{ form_errors(form.plainPassword) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_label(form.plainPassword.first, null, {
                'label': 'Nouveau mot de passe',
                'label_attr': {'class': 'control-label'}
            }) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-sm-4 offset-sm-4 form-group">
            {{ form_label(form.plainPassword.second, null, {
                'label': 'Nouveau mot de passe (confirmation)',
                'label_attr': {'class': 'control-label'}
            }) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-12">
            <button class="btn btn-info" type="submit">Enregistrer <i class="fa fa-paper-plane"></i></button>
        </div>
    </div>
{{ form_end(form) }}
